{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es5", "es2015.promise"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "compileOnSave": true,
  "types": ["vue"],
  "typeRoots": ["node_modules/@types"]
}
